---
import { RES_TEAMS } from "@/consts/resTeams";
import Title from "@/components/Title.astro";
import Cuartos from "@/components/Cuartos.astro";
import Subtitle from "@/components/Subtitle.astro";
import SubtitleFooter from "@/components/SubtitleFooter.astro";
import TabladeResultados from "./TabladeResultados.astro";
import ProgramacionTorneo from "./ProgramacionTorneo.astro";
import ResultadosEliminatorias from "./ResultadosEliminatorias.astro";

let teams = Array(16).fill(null);
RES_TEAMS.forEach((team) => {
  teams[Number(team.id) - 1] = team;
});
---

<section>
